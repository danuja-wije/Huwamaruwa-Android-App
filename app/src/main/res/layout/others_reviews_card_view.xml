<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/Other_reviews_card_view"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <ImageView
                    android:id="@+id/othersReviewsBuyerImage"
                    android:layout_width="73dp"
                    android:layout_height="65dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="229dp"></ImageView>

                <RatingBar
                    android:id="@+id/othersReviewsRatingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/OthersReviewsName"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="109dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="137dp"
                    android:layout_marginBottom="137dp"
                    android:isIndicator="true" />

                <TextView
                    android:id="@+id/OthersReviewsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="113dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="158dp"
                    android:text="Reviewer"></TextView>

            </RelativeLayout>

            <TextView
                android:id="@+id/othersreviewsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:numStars="5"
                android:stepSize="0.1"
                android:text="Description" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
