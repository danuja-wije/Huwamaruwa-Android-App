<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductReviews.allProductReviews">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <ImageView
                    android:id="@+id/ReviewerImageMyReview"
                    android:layout_width="73dp"
                    android:layout_height="65dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="229dp"></ImageView>

                <RatingBar
                    android:id="@+id/myRatingAllRatings"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reviewerNameMyReviews"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="109dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="137dp"
                    android:layout_marginBottom="137dp"
                    android:isIndicator="true" />

                <TextView
                    android:id="@+id/reviewerNameMyReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="113dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="158dp"
                    android:text="Reviewer"></TextView>

                <TextView
                    android:id="@+id/myReviewEdit"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="281dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="center"
                    android:text="Edit"
                    android:textStyle="bold"></TextView>

                <ImageView
                    android:id="@+id/myReviewDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/myReviewEdit"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="288dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="17dp"
                    app:srcCompat="@drawable/ic_baseline_delete_24" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:numStars="5"
                android:stepSize="0.1"
                android:text="Description" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>